{
  "compilerOptions": {
    "module": "es6",
    "strictNullChecks": true,
    "target": "es5",
    "newLine": "lf",
    "outDir": "build",
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop":true
  },
  "include": [
    "src/**/*.ts"
  ]
}